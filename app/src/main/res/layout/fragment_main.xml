<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.MainFragment">


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_bg"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:layout_marginTop="11dp"
                android:paddingLeft="10dp"
                android:text="Church information" />


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:padding="@dimen/activity_horizontal_margin">


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/material_grey_700">

                            <EditText
                                android:id="@+id/input_church_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="church name"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/material_grey_700" />
                        </android.support.design.widget.TextInputLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:padding="@dimen/activity_horizontal_margin">


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColorHint="@color/material_grey_700">

                            <EditText
                                android:id="@+id/input_church_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="email"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/material_grey_700" />
                        </android.support.design.widget.TextInputLayout>

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"

                        android:padding="@dimen/activity_horizontal_margin"
                        android:paddingBottom="20dp">


                        <TextView
                            android:id="@+id/churchphone"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:autoLink="email"
                            android:paddingBottom="20dp"
                            android:text="+251"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:textColor="#212121"
                            android:textColorLink="#2f94ff"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/churchphone"

                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_toEndOf="@+id/churchphone"
                            android:layout_toRightOf="@+id/churchphone"
                            android:textColorHint="@color/material_grey_700">

                            <EditText
                                android:id="@+id/input_church_phone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="phone number"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/material_grey_700" />
                        </android.support.design.widget.TextInputLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        >

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:textColorHint="@color/material_grey_700">

                            <EditText
                                android:id="@+id/input_church_website"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="website"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/material_grey_700" />
                        </android.support.design.widget.TextInputLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"

                        android:padding="@dimen/activity_horizontal_margin"
                        android:paddingBottom="10dp">


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:textColorHint="@color/material_grey_700">

                            <EditText
                                android:id="@+id/input_church_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="location"
                                android:inputType="textEmailAddress"
                                android:textColor="@color/material_grey_700" />
                        </android.support.design.widget.TextInputLayout>


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"

                        android:padding="@dimen/activity_horizontal_margin"
                        android:paddingBottom="50dp">

                        <ImageView
                            android:id="@+id/buttonpic"
                            android:layout_width="25dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/ic_menu_camera"
                            android:layout_alignBottom="@+id/btn_pic"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_pic"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/buttonpic"
                            android:layout_toRightOf="@+id/buttonpic"
                            android:background="@color/colorAccent"
                            android:padding="12dp"

                            android:text="Take Picture"
                            android:textColor="@color/white">

                        </android.support.v7.widget.AppCompatButton>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"

                        android:padding="@dimen/activity_horizontal_margin"
                        android:paddingBottom="50dp">

                        <ImageView
                            android:id="@+id/churchgpsimg"
                            android:layout_width="25dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/ic_gps_fixed_black_24dp"
                            />


                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"/>


                        <android.support.v7.widget.AppCompatButton
                            android:id="@+id/btn_gps"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"

                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/churchgpsimg"
                            android:layout_toRightOf="@+id/churchgpsimg"
                            android:background="@color/colorAccent"
                            android:padding="12dp"
                            android:text="Get GPS coordinate"
                            android:textColor="@color/white" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_below="@+id/btn_gps"
                            android:paddingBottom="10dp">
                            <TextView
                                android:id="@+id/textview_longitude"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingBottom="20dp"
                                android:text="longitude"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="#212121"
                                android:textColorLink="#2f94ff"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />
                            <TextView
                                android:id="@+id/textview_lattitude"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingBottom="20dp"
                                android:paddingLeft="10dp"
                                android:text="latitude"
                                android:layout_toRightOf="@+id/textview_longitude"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="#212121"
                                android:textColorLink="#2f94ff"
                                />
                        </RelativeLayout>

                    </RelativeLayout>
                

</LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"
            android:padding="5dp"
            android:text="Register"
 />

    </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>